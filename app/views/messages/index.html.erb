<div class="panel panel-default">
   <div class="panel-heading">
      Message List
   </div>
   
   <div class="panel-body">
      <% @messages.each do |message| %>
        <span class="label label-info" style="font-size: 12px; background-color: #3498db;"><%= message.name %></span>
        <br>
        <%= message.body %>
        (<%= link_to "edit" , edit_message_path(message) %>)
        (<%= link_to "destroy" , message , method: :delete, data: { confirm: 'Do you want delete this message?' } %>)
        <br>
      <% end %>
   </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %> 
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
            <% @message.errors.full_messages.each do |full_message| %>
            <li>
                <%= full_message %>
            </li>
            <% end %>
        </ul>
    </div>
    <% end %>
  <div class="form-group">
     <%= f.label :name, :id => "name-label", :class => "col-sm-1 control-label", style: "font-size:20px; " %>
     <div class="col-sm-11">
        <%= f.text_field :name, :class => "form-control" %>
     </div>
  </div>
  <br>
  <div class="form-group">
     <%= f.label :name, "Content", :class => "col-sm-1 control-label", style: "font-size:20px; " %>
     <div class="col-sm-11">
        <%= f.text_area :body, class: "form-control" %>
     </div>
  </div>
  <div class="form-group">

  <div class="submit">
     <div class="col-sm-offset-1">
        <%= f.submit "Send", class: "btn btn-primary btn-lg btn-block", style: "margin-left: 3px; margin-top: 20px;" %>
     </div>
  </div><%= render 'form' %>
  
  
<% end %>