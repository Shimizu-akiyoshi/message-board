<div class="panel panel-default">
   <div class="panel-heading">
      Message List
   </div>
   
   <div class="panel-body">
      <% @messages.each do |message| %>
        <span class="label label-info" style="font-size: 12px; background-color: #3498db;"><%= message.name %></span>
        <br>
        <%= message.body %>
        (<%= link_to "edit" , edit_message_path(message) %>)
        (<%= link_to "destroy" , message , method: :delete, data: { confirm: 'Do you want delete this message?' } %>)
        <br>
      <% end %>
   </div>
</div>

<%= render 'form' %>